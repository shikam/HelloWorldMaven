pipeline { 
    agent any 
    stages {
        stage('Build') { 
            steps {
                withMaven(maven : 'maven'){
                        sh "mvn clean compile"
                }
            }
        }
        stage('Test'){
            steps {
                withMaven(maven : 'maven'){
                        sh "mvn test"
                }

            }
        }
    }
    post { 
        always { 
            cleanWs()
        }
    }
}


